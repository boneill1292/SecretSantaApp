@model MyGroupsViewModel

@if (Model.MyGroups.Count > 0)
{
  <h3>Groups You Belong To</h3>
  <div class="row">
    <table class="table table-responsive table-striped">
      <thead>
      <tr>
        <th>Group ID</th>
        <th>Group Name</th>
        <th>Active</th>
        <th>PassWord</th>
        <th>InsertedBy</th>
        <th>&nbsp;</th>
      </tr>
      </thead>
      <tbody>
      @foreach (var g in Model.MyGroups)
      {
        <tr>
          <td>@g.GroupId</td>
          <td>@g.GroupName</td>
          <td>@g.Active</td>
          <td>@g.GroupPassWord</td>
          <td>@g.InsertedBy</td>
          <td>
            <form >
              <input asp-controller="Groups" asp-action="JoinGroup" asp-route-id="@g.GroupId" method="GET" type="submit" class="btn btn-group" value="Join Group" />
            </form>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
}
else
{
  <h3>You belong to no groups. Why dont you add one</h3>
}
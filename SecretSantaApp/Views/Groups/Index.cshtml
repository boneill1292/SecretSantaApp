@using SecretSantaApp.Views.Groups
@model SecretSantaApp.Views.Groups.GroupAdminModel
@{
  var newgroupurl = Url.Action("NewGroupPage", "Groups");
  var joingroupurl = Url.Action("GroupsUserDoesNotBelongTo", "Groups");
}

@*<form>
  <button asp-action="NewGroupPage" asp-controller="Groups" class="btn btn-primary">Create New Group</button>
</form>*@

<div class="clearfix"></div>
<div class="col-xs-12" style="text-align:center; color:black; padding-top: 2%;">
  <h3>Santify your Destiny </h3>
</div>

<div class="clearfix"></div>
<div class="container">
  <div class="row JoinOrCreateDiv">
    <div class="col-xs-6" style="background-color: white;">
      <div style="outline: 3px red solid; margin: auto; text-align: center">
        <h5><button style="background-color:green"class="btn-info alert" onclick="NewGroup();">Create a group</button></h5>
        <p>picture of an elf making a toy</p>
      </div>
    </div>

    <div class="col-xs-6" style="background-color:white">
      <div>
        <div style="outline: 3px red solid; margin: auto; text-align: center;">
          <h5><button style="background-color:green" class="btn-info alert" onclick="JoinGroup();">Join a group</button></h5>
          <p>pic of reindeers joining together?</p>
        </div>
      </div>
    </div>

  </div>
</div>



@using SecretSantaApp.Views.Groups
@model SecretSantaApp.Views.Groups.GroupAdminModel
@{
  var newgroupurl = Url.Action("NewGroupPage", "Groups");
  var joingroupurl = Url.Action("AvailableGroupsToJoin", "Groups");
}

@*<form>
    <button asp-action="NewGroupPage" asp-controller="Groups" class="btn btn-primary">Create New Group</button>
  </form>*@

<div class="clearfix"></div>
<div class="col-xs-12" style="text-align:center; color:black; padding-top: 2%; ">
  <h3> </h3>
</div>
<div class="clearfix"></div>

<div class="container">
  <div class="row">
    <div class="col-xs-6" style="background-color: white;">
      @*<div style="outline:5px green dotted;">*@
      <div class="ControlBox" style="">
        <h5><button style="background-color: #B21815" class="btn-success alert" onclick="NewGroup();">Create a Group</button></h5>
        <span><img src="images/smElf.png" alt="Elves" class="img-responsive" style="margin: 0 auto !important" /></span>
      </div>
      @*</div>*@
    </div>

    <div class="col-xs-6" style="background-color:white">
      <div>
        <div class="ControlBox" style="">
            <h5>
                <button style="background-color: #B21815" 
                        class="btn-info alert" 
                        onclick="JoinGroup();">Join a Group</button>
            </h5>
            <span>
                 <img src="images/smSantaAndReindeer.png" alt="Santa" class="img-responsive" style="margin: 0 auto !important">
            </span>
        </div>
        @*</div>*@
      </div>
    </div>

  </div>
</div>




@section scripts{
  <script>
    $("document").ready(function () {
      //console.log("group home ready");

      $("#btnDetails").click(function () {
        $('#DetailsPopup').appendTo("body").modal('show');
      });

    });

  
    function NewGroup() {
      window.location.href = '@newgroupurl';
    }

    function JoinGroup() {
      window.location.href = '@joingroupurl';
    }
  </script>
}


@section scripts{
  <script>
    $("document").ready(function () {
      console.log("group home ready");
    });

    function NewGroup() {
      window.location.href = '@newgroupurl';
    }

    function JoinGroup() {
      window.location.href = '@joingroupurl';
    }
  </script>
}

<style>
  .JoinOrCreateDiv {
    padding: 1%;
    background-color: black;
    outline: 5px green solid;
  }
</style>
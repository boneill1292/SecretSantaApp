@using System.Security.Claims
@using SecretSantaApp.BL
@model GroupChatDisplayModel
@inject ISecretSantaBl ssbl
@{
  var uid = Guid.NewGuid();
  var containerid = $"divcontainerid-{uid}";
  var newmessagepopup = Url.Action("NewMessagePartial", "Groups", new { groupid = Model.GroupId });
}

<div id="@containerid">


  <div class="col-md-12" style="text-align: center;">
    <h4> lets chat in group: @Model.GroupName</h4>
  </div>

  <div class="row">
    <div class="col-md-8" style="outline: 2px orange solid">
      @if (Model.MessagesList.Count > 0)
      {
        <table class="table table-responsive table-striped">
          <thead>
          <tr>
            <th>&nbsp;</th>
            
          </tr>
          </thead>
          <tbody>
          @foreach (var r in Model.MessagesList)
          {
            var user = ssbl.UserFullNameByAccountNumberString(r.InsertedBy);
            <tr>
              <td>@user said:  @r.Message</td>

             @if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier).Value == r.InsertedBy)
              {
               @*var editruleurl = Url.Action("EditRulePopup", "Groups", new {ruleid = r.ID});
                var deleteruleurl = Url.Action("DeleteRulePopup", "Groups", new {ruleid = r.ID});

                <td>
                  <button class="btn btn-group modal-link BtnGreen"
                          href="@editruleurl"
                          title="Add modal"
                          data-target="#modal-container"
                          data-toggle="modal">
                    Edit
                  </button>
          

                  <button class="btn btn-group modal-link BtnRed"
                          href="@deleteruleurl"
                          title="Add modal"
                          data-target="#modal-container"
                          data-toggle="modal">
                    Delete
                  </button>
                </td>*@
              }
              else
              {
                @*<td>you cannot edit this rule</td>*@
              }

            </tr>
          }
          </tbody>
        </table>
      }
      else
      {
        <h5>No Messages. Talk some smack!</h5>
      }
    </div>
    
    <div id="newmessageinput" class="col-md-4" style="outline:2px purple solid">
      <h5>New Message input?</h5>
    </div>

